<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyShelf" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Universe</item>
        <item name="colorPrimaryVariant">@color/UniverseVariant</item>
        <item name="colorOnPrimary">@color/peach</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/AccentPeach</item>
        <item name="colorSecondaryVariant">@color/AccentPeach</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyShelf.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyShelf.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyShelf.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>